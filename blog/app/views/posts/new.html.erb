<h1>New Post</h1>
<%= form_for :post,  url: posts_path do |p| %>
  <p>
    <%= p.label :title %><br>
    <%= p.text_field :title %>
  </p>

  <p>
    <%= p.label :content %><br>
    <%= p.text_area :content %>
  </p>

  <p>
    <%= p.submit %>
  </p>
<% end %>
</br>
<%= link_to 'Back', posts_path %>